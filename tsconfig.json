{
  "compilerOptions": {
    "target": "es2016",                       
    "module": "commonjs",                             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,         
    "strict": true,           
    "resolveJsonModule": true,
    "skipLibCheck": true ,
    "outDir": "./dist"
  },
  "moduleResolution": "node",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
